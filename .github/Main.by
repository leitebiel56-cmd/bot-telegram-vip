import logging
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes

# Substitua pelo token do BotFather
BOT_TOKEN = "8526181853:AAEEgqJtdGOu_UlGBSsVNu85Yljm_7xR7QE"

logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    # Confere se veio mensagem (ex.: em alguns updates pode ser None)
    if update.message:
        await update.message.reply_text("ï¿½Bot online! Funcionando.")
    else:
        logger.warning("Recebido update sem message: %s", update)

def main():
    app = ApplicationBuilder().token(BOT_TOKEN).build()
    app.add_handler(CommandHandler("start", start))

    print("Bot rodando...")
    app.run_polling()  # Bloqueia e inicia o polling

if __name__ == "__main__":
    main()
